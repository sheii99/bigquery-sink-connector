<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.bigquery.connect.kafka</groupId>
	<artifactId>iblync-kafka-bigquery</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>iblync-kafka-bigquery</name>
	<description>Kafka Connect Sink Connector for BigQuery</description>
	<url />
	<licenses>
		<license />
	</licenses>
	<developers>
		<developer />
	</developers>
	<scm>
		<connection />
		<developerConnection />
		<tag />
		<url />
	</scm>
	<properties>
		<java.version>17</java.version>
		<kafka.version>3.8.1</kafka.version>
	</properties>
	<dependencies>

		<dependency>
			<groupId>org.apache.kafka</groupId>
			<artifactId>connect-api</artifactId>
			<version>3.9.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.avro</groupId>
			<artifactId>avro</artifactId>
			<version>1.12.0</version>
		</dependency>
		<dependency>
			<groupId>io.projectreactor</groupId>
			<artifactId>reactor-core</artifactId>
			<version>3.6.7</version> <!-- Use latest stable version -->
		</dependency>
		
		<!-- BigQuery client library -->
		<dependency>
			<groupId>com.google.cloud</groupId>
			<artifactId>google-cloud-bigquery</artifactId>
			<version>2.34.2</version>
		</dependency>
	</dependencies>

	<build>
		
			<plugins>
	  <!-- Maven Compiler Plugin -->
	  <plugin>
	    <groupId>org.apache.maven.plugins</groupId>
	    <artifactId>maven-compiler-plugin</artifactId>
	    <version>3.11.0</version>
	    <configuration>
	      <source>17</source> 
	      <target>17</target>
	    </configuration>
	  </plugin>
	
	  <!-- Maven Shade Plugin to create fat JAR -->
	  <plugin>
	    <groupId>org.apache.maven.plugins</groupId>
	    <artifactId>maven-shade-plugin</artifactId>
	    <version>3.5.0</version>
	    <executions>
	      <execution>
	        <phase>package</phase>
	        <goals>
	          <goal>shade</goal>
	        </goals>
	        <configuration>
	          <createDependencyReducedPom>false</createDependencyReducedPom>
	          <shadedArtifactAttached>true</shadedArtifactAttached>
	
	          <!-- Exclude Kafka core APIs (Connect provides them) -->
	          <artifactSet>
	            <excludes>
	              <exclude>org.apache.kafka:connect-api</exclude>
	              <exclude>org.apache.kafka:kafka-clients</exclude>
	              <exclude>org.slf4j:*</exclude>
	              <exclude>log4j:*</exclude>
	            </excludes>
	          </artifactSet>
	
	          <!-- Remove signatures from dependencies -->
	          <filters>
	            <filter>
	              <artifact>*:*</artifact>
	              <excludes>
	                <exclude>META-INF/*.SF</exclude>
	                <exclude>META-INF/*.DSA</exclude>
	                <exclude>META-INF/*.RSA</exclude>
	              </excludes>
	            </filter>
	          </filters>
	
	          <!-- Keep service loader metadata (for Connector discovery) -->
	          <transformers>
	            <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
	          </transformers>
	        </configuration>
	      </execution>
	    </executions>
	  </plugin>
	</plugins>

	</build>

</project>
